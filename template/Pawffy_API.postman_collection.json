{
	"info": {
		"_postman_id": "pawffy-customer-api",
		"name": "Pawffy Customer API",
		"description": "API collection for Pawffy Customer Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/api",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": ["{{baseUrl}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Send OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phoneNumber\": \"+919876543210\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/send-otp",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "send-otp"]
						}
					},
					"response": []
				},
				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.customToken) {",
									"        pm.collectionVariables.set('authToken', response.data.customToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phoneNumber\": \"+919876543210\",\n  \"verificationId\": \"verify_123456789\",\n  \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/verify-otp",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "verify-otp"]
						}
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/refresh-token",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "refresh-token"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Customer",
			"item": [
				{
					"name": "Complete Registration",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": \"firebase-uid-here\",\n  \"name\": \"John Doe\",\n  \"description\": \"Pet Lover\",\n  \"profileImage\": \"https://example.com/profile.jpg\",\n  \"location\": \"Bangalore, India\",\n  \"termsConfirmation\": {\n    \"accepted\": true,\n    \"acceptedAt\": \"2025-09-21T10:00:00Z\"\n  },\n  \"addresses\": [\n    {\n      \"full_address\": \"123, MG Road\",\n      \"latitude\": 12.9716,\n      \"longitude\": 77.5946,\n      \"postal_code\": \"560001\",\n      \"city\": \"Bangalore\",\n      \"state\": \"Karnataka\",\n      \"country\": \"India\",\n      \"locality\": \"MG Road\",\n      \"landmark\": \"Near Metro\",\n      \"direction\": \"Opposite Mall\",\n      \"houseNo\": \"123\",\n      \"tag\": \"Home\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/customer/register",
							"host": ["{{baseUrl}}"],
							"path": ["customer", "register"]
						}
					},
					"response": []
				},
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/customer/profile",
							"host": ["{{baseUrl}}"],
							"path": ["customer", "profile"]
						}
					},
					"response": []
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Updated\",\n  \"description\": \"Updated Pet Lover\",\n  \"profileImage\": \"https://example.com/new-profile.jpg\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/customer/profile",
							"host": ["{{baseUrl}}"],
							"path": ["customer", "profile"]
						}
					},
					"response": []
				},
				{
					"name": "Add Address",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"full_address\": \"456, Brigade Road\",\n  \"latitude\": 12.9698,\n  \"longitude\": 77.6205,\n  \"postal_code\": \"560025\",\n  \"city\": \"Bangalore\",\n  \"state\": \"Karnataka\",\n  \"country\": \"India\",\n  \"locality\": \"Brigade Road\",\n  \"landmark\": \"Near Forum Mall\",\n  \"direction\": \"Opposite Cafe\",\n  \"houseNo\": \"456\",\n  \"tag\": \"Work\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/customer/address",
							"host": ["{{baseUrl}}"],
							"path": ["customer", "address"]
						}
					},
					"response": []
				},
				{
					"name": "Add Pet",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Buddy\",\n  \"type\": \"Dog\",\n  \"breed\": \"Golden Retriever\",\n  \"age\": 3,\n  \"gender\": \"Male\",\n  \"weight\": 25.5,\n  \"profileImage\": \"https://example.com/pet.jpg\",\n  \"medicalHistory\": [],\n  \"vaccinations\": [\n    {\n      \"name\": \"Rabies\",\n      \"date\": \"2024-01-15T00:00:00Z\",\n      \"nextDue\": \"2025-01-15T00:00:00Z\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/customer/pet",
							"host": ["{{baseUrl}}"],
							"path": ["customer", "pet"]
						}
					},
					"response": []
				},
				{
					"name": "Update FCM Token",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fcmToken\": \"your-fcm-token-here\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/customer/fcm-token",
							"host": ["{{baseUrl}}"],
							"path": ["customer", "fcm-token"]
						}
					},
					"response": []
				}
			]
		}
	]
}